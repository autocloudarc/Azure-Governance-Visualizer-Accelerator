{
  "displayName": "Event Hub namespaces should use a valid TLS version",
  "policyType": "Custom",
  "mode": "All",
  "description": "Event Hub namespaces should use a valid TLS version.",
  "metadata": {
    "alzCloudEnvironments": [
      "AzureCloud",
      "AzureChinaCloud",
      "AzureUSGovernment"
    ],
    "category": "Event Hub",
    "source": "https://github.com/Azure/Enterprise-Scale/",
    "version": "1.1.2",
    "createdBy": "bbd0bbbd-16fc-4c39-a530-65ced78b7590",
    "createdOn": "2026-01-21T00:36:58.8958541Z",
    "updatedBy": null,
    "updatedOn": null
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "description": "Enable or disable the execution of the policy",
        "displayName": "Effect"
      },
      "allowedValues": [
        "Audit",
        "Deny",
        "Disabled"
      ],
      "defaultValue": "Deny"
    },
    "minTlsVersion": {
      "type": "string",
      "metadata": {
        "description": "Minimum TLS version to be used by Event Hub",
        "displayName": "Minimum TLS Version"
      },
      "defaultValue": "1.2"
    }
  },
  "policyRule": {
    "if": {
      "allOf": [
        {
          "equals": "Microsoft.EventHub/namespaces",
          "field": "type"
        },
        {
          "anyOf": [
            {
              "field": "Microsoft.EventHub/namespaces/minimumTlsVersion",
              "less": "[parameters('minTlsVersion')]"
            },
            {
              "exists": "false",
              "field": "Microsoft.EventHub/namespaces/minimumTlsVersion"
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]"
    }
  }
}
