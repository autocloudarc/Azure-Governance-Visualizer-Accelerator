{
  "properties": {
    "displayName": "[Preview]: Cognitive Services Deployments Should Only Use Allowed Control Mode",
    "policyType": "BuiltIn",
    "mode": "Microsoft.CognitiveServices.Data",
    "description": "Mandate content filtering mode for model deployments within your organization.",
    "metadata": {
      "version": "1.0.0-preview",
      "category": "Cognitive Services",
      "preview": true
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy."
        },
        "allowedValues": [
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Audit"
      },
      "raiPolicyMode": {
        "type": "Array",
        "metadata": {
          "displayName": "Streaming Mode",
          "description": "The AllowedStreaming Model of the Filter, Default or Asynchronous_filter."
        },
        "allowedValues": [
          "Default",
          "Asynchronous_filter"
        ],
        "defaultValue": [
          "Default",
          "Asynchronous_filter"
        ]
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.CognitiveServices.Data/accounts/deployments"
          },
          {
            "field": "Microsoft.CognitiveServices.Data/accounts/deployments/raiPolicy.mode",
            "notIn": "[parameters('raiPolicyMode')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  },
  "id": "/providers/Microsoft.Authorization/policyDefinitions/c1ad46c6-37f8-4af0-9c71-c208375c87dd",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "c1ad46c6-37f8-4af0-9c71-c208375c87dd"
}
