{
  "properties": {
    "displayName": "Audit - Allowed Cognitive Services Kinds",
    "policyType": "BuiltIn",
    "mode": "Indexed",
    "description": "Cognitive Services kinds based on catalog.",
    "metadata": {
      "version": "1.0.0",
      "category": "System Policy"
    },
    "parameters": {
      "allowedKinds": {
        "type": "Array",
        "metadata": {
          "displayName": "allowedKinds",
          "description": "Cognitive Services allowed kinds based on catalog."
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.CognitiveServices/accounts"
          },
          {
            "not": {
              "field": "kind",
              "in": "[parameters('allowedKinds')]"
            }
          }
        ]
      },
      "then": {
        "effect": "audit"
      }
    }
  },
  "id": "/providers/Microsoft.Authorization/policyDefinitions/c9623da8-5301-401e-9ca8-69396833b6f3",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "c9623da8-5301-401e-9ca8-69396833b6f3"
}
