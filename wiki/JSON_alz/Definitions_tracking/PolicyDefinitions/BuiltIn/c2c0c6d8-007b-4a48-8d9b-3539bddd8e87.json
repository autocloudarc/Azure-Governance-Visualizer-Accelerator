{
  "properties": {
    "displayName": "Microsoft Defender for AI Services should be enabled",
    "policyType": "BuiltIn",
    "mode": "All",
    "description": "Audit to see if Microsoft Defender for AI Services is enabled on the subscription.",
    "metadata": {
      "version": "1.0.0",
      "category": "Security Center"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "The effect of the policy. 'auditIfNotExists' will log non-compliance and 'disabled' will not enforce the policy."
        },
        "allowedValues": [
          "AuditIfNotExists",
          "Disabled"
        ],
        "defaultValue": "AuditIfNotExists"
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Resources/subscriptions"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Security/pricings",
          "name": "AI",
          "existenceScope": "subscription",
          "existenceCondition": {
            "field": "Microsoft.Security/pricings/pricingTier",
            "equals": "Standard"
          }
        }
      }
    }
  },
  "id": "/providers/Microsoft.Authorization/policyDefinitions/c2c0c6d8-007b-4a48-8d9b-3539bddd8e87",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "c2c0c6d8-007b-4a48-8d9b-3539bddd8e87"
}
