{
  "properties": {
    "displayName": "Allowed Cognitive Services Kinds",
    "policyType": "BuiltIn",
    "mode": "Indexed",
    "description": "Cognitive Services kinds based on catalog.",
    "metadata": {
      "version": "1.0.0",
      "category": "System Policy"
    },
    "parameters": {
      "allowedKinds": {
        "type": "Array",
        "metadata": {
          "displayName": "allowedKinds",
          "description": "Cognitive Services allowed kinds based on catalog."
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.CognitiveServices/accounts"
          },
          {
            "not": {
              "field": "kind",
              "in": "[parameters('allowedKinds')]"
            }
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  },
  "id": "/providers/Microsoft.Authorization/policyDefinitions/24695608-3876-42e7-b7ec-17a85ebb9133",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "24695608-3876-42e7-b7ec-17a85ebb9133"
}
