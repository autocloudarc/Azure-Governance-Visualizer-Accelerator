{
  "properties": {
    "displayName": "Multi Factor Authentication Enforcement - Delete",
    "policyType": "BuiltIn",
    "mode": "All",
    "description": "This policy definition blocks resource delete operations when the caller is not authenticated via MFA. For more information, visit https://aka.ms/mfaforazure.",
    "metadata": {
      "version": "1.0.0",
      "category": "System Policy"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "The desired effect of the policy"
        },
        "allowedValues": [
          "AuditAction",
          "DenyAction",
          "Disabled"
        ],
        "defaultValue": "AuditAction"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "value": "[requestContext().identity.idtyp]",
            "equals": "user"
          },
          {
            "value": "mfa",
            "notIn": "[split(tryGet(requestContext().identity, 'http://schemas.microsoft.com/claims/authnmethodsreferences'), ',')]"
          },
          {
            "value": "p1",
            "notIn": "[split(requestContext().identity.acrs, ',')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "actionNames": [
            "delete"
          ]
        }
      }
    }
  },
  "id": "/providers/Microsoft.Authorization/policyDefinitions/f69cd8b8-9a6e-46b4-be84-244e8b127944",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "f69cd8b8-9a6e-46b4-be84-244e8b127944"
}
