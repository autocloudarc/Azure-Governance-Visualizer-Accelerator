{
  "displayName": "Create Regional NetworkWatcher in NetworkWatcherRG for VNet Flowlogs",
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "description": "This policy creates a Network Watcher in the specified region to enable Flowlogs for Virtual Networks.",
  "metadata": {
    "version": "1.0.0",
    "category": "Network"
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "DeployIfNotExists",
        "Disabled"
      ],
      "defaultValue": "DeployIfNotExists"
    },
    "location": {
      "type": "String",
      "metadata": {
        "displayName": "Network Watcher Location",
        "description": "Location where the Network Watcher exists or will be created in. It should match the location of the Virtual Network where flow logs are to be enabled.",
        "strongType": "location"
      }
    }
  },
  "policyRule": {
    "if": {
      "field": "type",
      "equals": "Microsoft.Network/networkWatchers"
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "type": "Microsoft.Network/networkWatchers",
        "name": "[toLower(concat('networkWatcher_', parameters('location')))]",
        "existenceCondition": {
          "allof": [
            {
              "field": "id",
              "equals": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/NetworkWatcherRG/providers/Microsoft.Network/networkWatchers/networkWatcher_', parameters('location'))]"
            },
            {
              "field": "location",
              "equals": "[parameters('location')]"
            }
          ]
        },
        "roleDefinitionIds": [
          "/providers/microsoft.authorization/roleDefinitions/4d97b98b-1d4f-4787-a291-c67834d212e7"
        ],
        "deployment": {
          "properties": {
            "mode": "Incremental",
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "parameters": {
                "location": {
                  "type": "string"
                }
              },
              "variables": {
                "networkWatcherName": "[concat('networkWatcher_', parameters('location'))]"
              },
              "resources": [
                {
                  "type": "Microsoft.Resources/deployments",
                  "apiVersion": "2021-04-01",
                  "name": "deployNetworkWatcherForFlowlog",
                  "properties": {
                    "mode": "Incremental",
                    "template": {
                      "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                      "contentVersion": "1.0.0.0",
                      "resources": [
                        {
                          "type": "Microsoft.Network/networkWatchers",
                          "apiVersion": "2022-07-01",
                          "name": "[variables('networkWatcherName')]",
                          "location": "[parameters('location')]",
                          "properties": {}
                        }
                      ]
                    }
                  },
                  "resourceGroup": "NetworkWatcherRG"
                }
              ]
            },
            "parameters": {
              "location": {
                "value": "[parameters('location')]"
              }
            }
          }
        }
      }
    }
  }
}
