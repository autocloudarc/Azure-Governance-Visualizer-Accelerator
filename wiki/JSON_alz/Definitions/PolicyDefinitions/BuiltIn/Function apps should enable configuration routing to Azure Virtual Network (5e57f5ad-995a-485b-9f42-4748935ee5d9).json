{
  "displayName": "Function apps should enable configuration routing to Azure Virtual Network",
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "description": "By default, app configuration like pulling container images and mounting content storage is not routed through regional VNET integration. For API versions before 2024-11-01, set 'vnetImagePullEnabled' and 'vnetContentShareEnabled' to true. For 2024-11-01+, set 'outboundVnetRouting.imagePullTraffic' and 'outboundVnetRouting.contentShareTraffic' to true. Not for Flex/Consumption plans. Learn more: https://aka.ms/appservice-vnet-configuration-routing.",
  "metadata": {
    "version": "1.2.0",
    "category": "App Service"
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "Audit",
        "Deny",
        "Disabled"
      ],
      "defaultValue": "Audit"
    }
  },
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Web/sites"
        },
        {
          "field": "kind",
          "contains": "functionapp"
        },
        {
          "field": "kind",
          "notContains": "workflowapp"
        },
        {
          "field": "kind",
          "notContains": "azurecontainerapps"
        },
        {
          "anyOf": [
            {
              "allOf": [
                {
                  "value": "[requestContext().apiVersion]",
                  "less": "2024-11-01"
                },
                {
                  "anyOf": [
                    {
                      "field": "Microsoft.Web/sites/vnetImagePullEnabled",
                      "notEquals": "true"
                    },
                    {
                      "field": "Microsoft.Web/sites/vnetContentShareEnabled",
                      "notEquals": "true"
                    }
                  ]
                }
              ]
            },
            {
              "allOf": [
                {
                  "value": "[requestContext().apiVersion]",
                  "greaterOrEquals": "2024-11-01"
                },
                {
                  "anyOf": [
                    {
                      "field": "Microsoft.Web/sites/outboundVnetRouting.imagePullTraffic",
                      "notEquals": "true"
                    },
                    {
                      "field": "Microsoft.Web/sites/outboundVnetRouting.contentShareTraffic",
                      "notEquals": "true"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]"
    }
  }
}
