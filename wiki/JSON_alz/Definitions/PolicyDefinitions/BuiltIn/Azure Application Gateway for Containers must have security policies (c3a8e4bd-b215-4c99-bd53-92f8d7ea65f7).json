{
  "displayName": "Azure Application Gateway for Containers must have security policies",
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "description": "Ensures Application Gateway for Containers has at least one security policy configured",
  "metadata": {
    "category": "Network",
    "version": "1.0.0"
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the policy"
      },
      "allowedValues": [
        "AuditIfNotExists",
        "Disabled"
      ],
      "defaultValue": "AuditIfNotExists"
    }
  },
  "policyRule": {
    "if": {
      "field": "type",
      "equals": "Microsoft.ServiceNetworking/trafficControllers"
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "type": "Microsoft.ServiceNetworking/trafficControllers/securityPolicies"
      }
    }
  }
}
