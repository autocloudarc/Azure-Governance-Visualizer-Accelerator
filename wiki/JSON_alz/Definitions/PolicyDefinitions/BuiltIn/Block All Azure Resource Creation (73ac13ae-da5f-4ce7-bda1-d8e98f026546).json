{
  "displayName": "Block All Azure Resource Creation",
  "policyType": "BuiltIn",
  "mode": "All",
  "description": "Block All Azure Resource Creation",
  "metadata": {
    "version": "1.0.0",
    "category": "System Policy"
  },
  "policyRule": {
    "if": {
      "source": "action",
      "like": "*/write"
    },
    "then": {
      "effect": "deny"
    }
  }
}
