{
  "displayName": "Audit Resource Types for Production Use which are non-authorized but allowed",
  "policyType": "BuiltIn",
  "mode": "All",
  "description": "This policy audits resources to ensure they are not authorized for production use.",
  "metadata": {
    "version": "1.0.0",
    "category": "System Policy"
  },
  "parameters": {
    "resourceTypes": {
      "type": "Array",
      "metadata": {
        "displayName": "Resource Types",
        "description": "The resource types to audit."
      }
    }
  },
  "policyRule": {
    "if": {
      "field": "type",
      "in": "[parameters('resourceTypes')]"
    },
    "then": {
      "effect": "audit"
    }
  }
}
